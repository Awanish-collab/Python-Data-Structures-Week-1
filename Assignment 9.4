name = input("Enter file:")  # don't pass any input becoz due to 2nd line code it automatic take input.
if len(name) < 1 : name = "mbox-short.txt"
hand = open(name)
lst = []
for line in hand:
    if not line.startswith("From:"):
        continue
    line = line.split()
    lst.append(line[1])
counts = dict()
for word in lst:
    counts[word] = counts.get(word,0) + 1
bigcount = None
bigword = None
for word,count in counts.items(): 
    if bigcount is None or count > bigcount:
        bigcount = count
        bigword = word
print(bigword,bigcount)
