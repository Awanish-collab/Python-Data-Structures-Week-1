# Use the file name mbox-short.txt as the file name
fname = input("Enter file name: ")
fh = open(fname)
count = 0
tot = 0
for line in fh:
    if not line.startswith("X-DSPAM-Confidence:") : continue
    #print(line)
    a = line.find("0")
    b = float(line[a:])
    tot =float(b + tot)
    count += 1
#print("Done")
avg = tot/count
print("Average spam confidence:",avg)
